{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "target": "es5",
        "lib": ["ESNext.Array"],
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "@typedefs/*": ["types/*"]
        },
        "strict": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
